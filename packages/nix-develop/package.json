{
  "name": "@opencodium/nix-develop",
  "version": "0.1.0",
  "description": "OpenCode plugin that activates nix flakes when .nix files are written or edited",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir ./dist",
    "test": "bun test ./src --timeout 120000",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@opencodium/shared": "workspace:*"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": "^1.0"
  },
  "devDependencies": {
    "@opencode-ai/plugin": "^1.0",
    "@types/bun": "^1.3",
    "@types/node": "^22",
    "typescript": "^5"
  },
  "keywords": ["opencode", "plugin", "nix", "flake", "develop"],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Alb-O/opencodium",
    "directory": "packages/nix-develop"
  }
}
