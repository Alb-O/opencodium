{
  "name": "@oc-plugins/shared",
  "version": "0.1.0",
  "description": "Shared utilities for OpenCode plugins",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir ./dist",
    "test": "bun test ./src",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "xdg-basedir": "^5.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "typescript": "^5"
  },
  "keywords": ["opencode", "plugin", "shared"],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/oc-plugins",
    "directory": "packages/shared"
  }
}
